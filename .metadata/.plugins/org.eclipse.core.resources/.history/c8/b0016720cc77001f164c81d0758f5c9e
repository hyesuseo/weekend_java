			System.out.println("짝수입니다")
		}

		// if~else~if 문을 사용하여
		// 정수가 3의 배수인지, 5의 배수인지 알아보기
		
		int number;
		if (number/3 %= 0 && number/5 %=0) {
			System.out.println("3과 5의 배수");
		}else (number/3 )
		
		
