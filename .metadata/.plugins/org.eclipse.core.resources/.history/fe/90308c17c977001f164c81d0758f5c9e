package condition;

import java.util.Scanner;

public class Ex01 {

	public static void main(String[] args) {
		
		int a = 80;
		
		if(a != 80)  {// 조건식이 true일 때 if문 중괄호 실행
			
			System.out.println("if문 안입니다.");
			System.out.println("조건은 참입니다.");
		}
System.out.println("if문과는 상관없습니다.");
	
	System.out.println();
	
	Scanner scan = new Scanner(System.in);
	
	int score;
	
	System.out.println("1~100 사이의 점수를 입력해주세요");
	
	score = scan.nextInt();
	
	if(score<80) {char grade = 'C'};
	else if(score >=80) {char grde = 'B'};
	else {char grade = 'A'};
	
	
	//3개의 if 문을 사용하여 점수에 따라 A, B, C 등급으로 나누기
	// score가 80점 미만이면 grade 에 c등급으로 초기화
	// score가 80점~89점이면 grade 에 b등급으로 초기화
	// score가 90점~100점이면 grade 에 a등급으로 초기화
	
	}

}
